        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="activity_second"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text?"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>